var s=prompt("enter some string: ");
s=s.split("")
var res="";
for(var i=0;i<s.length;i++){
    if(s[i]=="_"){
        s[i+1]=s[i+1].toUpperCase();
    }
    else{
        res=res+s[i]
    }
}
console.log(res)

output:
enter some string: mu_ke_sh
[
  'm', 'u', '_',
  'k', 'e', '_',
  's', 'h'
]
muKeSh
