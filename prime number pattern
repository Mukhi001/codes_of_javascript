var rows=5;
var n=2;
for(let i=1;i<=rows;i++){
    
   var str="",count=0
      for(let j=n;count<=i-1;j++){
        if(isPrime(n)){
            str+=j+" "
            count++
        }
        n++;
    } 
    console.log(str)
    
}
function isPrime(s){
    let count=0;
    for(let j=2;j<=s/2;j++){
        if(s%j==0){
            count++
        }
    }
    if(count==0){
        return true
    }
    else{
        return false
    }
}

